<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_centerInParent="true"
        android:textColor="#F2C57C"
        android:id="@+id/num"
        android:textSize="200dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SOLICITAR NUMERO"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:id="@+id/uno"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ENVIAR NUMERO"
        android:onClick="onClick"
        android:id="@+id/dos"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/uno"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:id="@+id/tres"
        android:layout_below="@+id/dos"
        android:layout_centerHorizontal="true"
        android:text="Obtener Datos"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:id="@+id/cuatro"
        android:layout_below="@+id/tres"
        android:layout_centerHorizontal="true"
        android:text="Borrar Datos"/>

</RelativeLayout>